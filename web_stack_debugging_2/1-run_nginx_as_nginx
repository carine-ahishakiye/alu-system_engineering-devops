#!/usr/bin/env bash

# Check if Nginx is running and list processes
ps aux | grep nginx

# Check if Nginx is listening on port 8080
ss -tuln | grep ':8080'

# Confirm that the output contains 'nginx'
if ps aux | grep -q 'nginx'; then
    echo "Nginx is running as the nginx user."
else
    echo "Nginx is not running as the nginx user."
fi
